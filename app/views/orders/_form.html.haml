.row
  .boxes
    .col-xs-12
      .large.box
        .icon
          .image
            %span.glyphicon.glyphicon-plus.btn-lg.white
          .info
            %h3.title New Order
            %fieldset
            = form_for @order do |f|
              - if current_user && current_user.role == "customer"
                .pure-control-group
                  = f.label :pickup_day
                  = f.date_select :pickup_day
                .pure-control-group
                  = f.label :pickup_time
                  = f.select :pickup_time, options_for_select([["AM", "AM"], ["PM", "PM"]])
                .pure-control-group
                  = f.label :return_day
                  = f.date_select :return_day
                .pure-control-group
                  = f.label :return_time
                  = f.select :return_time, options_for_select([["AM", "AM"], ["PM", "PM"]])
                .pure-control-group
                  = f.label :instructions
                  = f.text_field :instructions
                .pure-control-group
                  = f.label :dry_cleaning
                  = f.check_box :dry_cleaning
                .pure-control-group
                  = f.label :wash
                  = f.check_box :wash
              - if current_user && current_user.role == "provider"
                .pure-control-group
                  = f.label :price
                  = f.text_field :price
              %br
              %button.pure-button.pure-button-primary{type: "submit"} Submit
