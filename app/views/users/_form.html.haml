%form.pure-form.pure-form-aligned
  %fieldset
  = form_for @user do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

    .pure-control-group
      = f.label :first_name
      = f.text_field :first_name
    .pure-control-group
      = f.label :last_name
      = f.text_field :last_name
    .pure-control-group
      = f.label :address
      = f.text_field :address
    .pure-control-group
      = f.label :zipcode
      = f.text_field :zipcode
    .pure-control-group
      = f.label :phone
      = f.text_field :phone
    .pure-control-group
      = f.label :area 
      = f.text_field :area
    %br
    %button.pure-button.pure-button-primary{type: "submit"} Submit
