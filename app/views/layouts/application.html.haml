!!!
%html
  %head
    %title Washit
    %link{href: "http://yui.yahooapis.com/pure/0.5.0/pure-min.css", rel: "stylesheet"}/
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
  #layout
    / Menu toggle
    %a#menuLink.menu-link{href: "#menu"}
      / Hamburger icon
      %span
    #menu
      .pure-menu.pure-menu-open
        %a.pure-menu-heading Washit
        %ul
        - if current_user
          %li
            %a=link_to 'Order', new_order_path
          %li
            %a=link_to 'Past Orders', history_path
          %li
            %a=link_to 'Price estimator'
          - if current_user && current_user.role == "admin"
            %li
              %a=link_to 'Clients', clients_path
            %li
              %a=link_to 'Drivers', drivers_path
            %li
              %a=link_to 'Dry Cleaners', cleaners_path
            %li
              %a=link_to 'Orders', orders_path

    #main
      #signin
        - if user_signed_in?
          - if current_user.image? && current_user.name?
            = image_tag current_user.image, class: "small-avatar"
            %b= current_user.name
          - else
            Logged in as
            %b= current_user.email
          = link_to 'Edit Profile', edit_user_registration_path
          \|
          = link_to 'Logout',  destroy_user_session_path, method: :delete
        - else
          = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2)
          \|
          = link_to 'Sign up', new_user_registration_path
          \|
          = link_to 'Login', new_user_session_path
      .space
      .header
        = yield

    %footer
    