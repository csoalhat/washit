%p#notice= notice
- if current_user && current_user.role == "customer"
  .container.margintop
    .row
      .boxes
        .col-md-4
          .box
            .icon
              .image 
                %span.glyphicon.glyphicon-plus.btn-lg.white
              .info
                %h3.title Book an order
                %p.text
                  Book now, get your fresh clothes tomorrow!
                .more
                  =link_to 'Book Order', new_order_path

            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-list.btn-lg.white
              .info
                %h3.title View Orders
                %p.text
                  View all your pending, current and past orders.
                .more
                  =link_to 'View Orders', orders_path
            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-gbp.btn-lg.white
              .info
                %h3.title Estimate your order
                %p.text
                  Estimate the cost of your order and look at prices
                .more
                  =link_to 'Prices', prices_home_index_path 
      
            .space
- if current_user && current_user.role == "provider"
  .container
    .row
      .boxes
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-plus.btn-lg.white
              .info
                %h3.title Daily Orders
                %p.text
                  Book now, get your fresh clothes tomorrow!
                .more
                  =link_to 'View dashboard',dashboard_orders_path

            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-list.btn-lg.white
              .info
                %h3.title View Orders
                %p.text
                  View all your pending, current and past orders.
                .more
                  =link_to 'View Orders', orders_path
            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-user.btn-lg.white
              .info
                %h3.title View Customers
                %p.text
                  See all your customers and their contact details
                .more
                  =link_to 'Customers', users_path 
      
            .space
- if !current_user
  .container
    .row
      .boxes
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-plus.btn-lg.white
              .info
                %h3.title Sign Up
                %p.text
                  Never worry about dry cleaning again!
                .more
                  =link_to 'Sign Up', new_user_registration_path

            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-envelope.btn-lg.white
              .info.text
                %h3.title Login with Google
                %p
                  Login with your Google account
                .more
                  =link_to 'Login with Google', user_omniauth_authorize_path(:google_oauth2)
            .space
        .col-md-4
          .box
            .icon
              .image
                %span.glyphicon.glyphicon-user.btn-lg.white
              .info
                %h3.title Login
                %p.text
                  Make new orders, see your pending orders
                .more
                  =link_to 'Login', new_user_session_path
      
            .space


    
